{
  "name": "wordle-helper",
  "version": "1.0.0",
  "description": "",
  "exports": "./src/index.js",
  "type": "module",
  "scripts": {
    "analyze:failures": "node ./dist/index.test.js startingWord --json > dist/failure-analysis.json",
    "build": "go build -o bin/ cmd/build_template && esbuild --minify --bundle --outdir=dist/ src/index.js src/index.css && ./bin/build_template.exe src/template.html dist/index.js dist/index.css dist/index.html",
    "typecheck": "tsc",
    "configure": "node ./tools/configure.js dist/index.html",
    "configure:out": "node ./tools/configure.js",
    "format": "prettier --write src/*.js src/*.ts src/*.html tools/*.js",
    "format:go": "go fmt ./cmd/build/main.go",
    "format:ci": "prettier --check src/*.js src/*.ts src/*.html tools/*.js",
    "lint:go": "go vet ./cmd/build/main.go && staticcheck ./cmd/build/main.go",
    "ninja": "ninja",
    "precommit": "pnpm format:ci && pnpm typecheck",
    "test": "node ./dist/index.test.js",
    "watch": "watchexec -e js,css,html ninja"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^17.0.18",
    "esbuild": "^0.14.21",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  }
}
